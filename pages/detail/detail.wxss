/* pages/detail/detail.wxss */
.header {
  display: flex;
  display: -webkit-flex;
  position: relative;
  font-family: '微软雅黑';
  width: 100%;
  padding: 10px 0;
  padding-bottom: 50rpx;
  justify-content: center;
  background: #308bef;
  background-image: -webkit-linear-gradient(top, #308bef, #338AF1);
  background-image: -moz-linear-gradient(top, #308bef, #338AF1);
  background-image: -ms-linear-gradient(top, #308bef, #338AF1);
  background-image: -o-linear-gradient(top, #308bef, #338AF1);
  background-image: linear-gradient(to bottom, #308bef, #338AF1);
  color: #fff;
  text-align:center;
}
.header .site{
  font-size: 27rpx;
}
.header .mileage {
  position: relative;
  min-width: 134rpx;
  margin: 0 30rpx;
}
.header .mileage .name{
  font-size: 27rpx;  
}
.header .mileage .line{
  position: absolute;
  left: 0;
  bottom: 40rpx;
  width: 134rpx;
  height: 11rpx;
}
.item-con .line {
  width: 35px;
  height: 8rpx;
  margin-bottom:9rpx;
  margin-left:9rpx;

}
.info-box{
    background-color: #fff;
    margin-bottom: 10px;
    padding-bottom: 10rpx;
    box-shadow: 0 2px 12px 0 rgba(0,0,0,.1);
}
.info-box .item{
    position: relative;
    padding: 10rpx 30rpx 10rpx 160rpx;
    font-size: 27rpx;
    line-height: 60rpx;
    min-height: 50rpx;
}
.info-box .item .item-name{
    position: absolute;
    left: 30rpx;
    top: 10rpx;
}
.finish {
  color: #f00;
}
.addNav{
  display: block;
  width: 100%;
  margin: 0 auto;
  margin-top: 30px;
  margin-bottom: 20px;
}
.check-btn{
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #fff;
  background: #3982ff !important;
  border-radius: 45rpx;
  width: 630rpx;
}
.textStatus {
  float:right;
  color:#fff;
  padding:2px 7px;
  height: 18px;
  line-height: 18px;
  font-size: 14px; 
  border-radius: 12px;
}